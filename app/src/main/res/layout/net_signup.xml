<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your name?" />
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

        <!-- Classification -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your classification?" />
        <Spinner
            android:id="@+id/spinnerClassification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Major -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your major?" />
        <EditText
            android:id="@+id/editTextMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Minor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your minor? (if applicable)" />
        <EditText
            android:id="@+id/editTextMinor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Hometown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your hometown?" />
        <EditText
            android:id="@+id/editTextHometown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Interest -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are your interests?" />
        <EditText
            android:id="@+id/editTextInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Siblings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you have siblings?" />
        <EditText
            android:id="@+id/editTextSiblings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Favorite Color -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your favorite color?" />
        <EditText
            android:id="@+id/editTextFavoriteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Favorite TV Show/Movie -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your favorite TV show or movie?" />
        <EditText
            android:id="@+id/editTextFavoriteShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Favorite Weather -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your favorite weather?" />
        <EditText
            android:id="@+id/editTextFavoriteWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up" />

    </LinearLayout>
</ScrollView>
